<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane alignment="CENTER" gridLinesVisible="true" prefWidth="100.0">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <ToggleButton mnemonicParsing="false" text="Prostokąt">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" text="Linia" toggleGroup="$toggleGroup" GridPane.rowIndex="1" />
                  <ToggleButton mnemonicParsing="false" text="Okrąg" toggleGroup="$toggleGroup" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="canvasHolder" prefHeight="700.0" prefWidth="956.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="784.0" width="976.0" />
         </children>
      </StackPane>
   </center>
   <bottom>
      <Label fx:id="coordinates" text="Label" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
